@model Flight_Tracker.Models.Customer

@{
    ViewData["Title"] = "Home";
}

<br/>

<div class="border backgroundWhite">
    <div class="row">
        @*<div class="col-6"><h1>Hello @Model.C</h1></div>*@
        <div class="col-6">
            <h2 class="text-info">Account Overview</h2>
        </div>

    </div>
    <br />
    <div>

    </div>
    <div>
        <table id="tblData" class="table table-striped border">
            <tr class="table-secondary">                
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StreetAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ZipCode)
                </th>
                <th></th>
            </tr>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.FirstName) @Html.DisplayFor(modelItem => Model.LastName)
                    </td>                     
                    <td>
                        @Html.DisplayFor(modelItem => Model.StreetAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.ZipCode)
                    </td>
                    <td class="whiteSpace" colspan="1" width:5px">
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@Model.Id"><i class="fas fa-search"></i></a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>     
</div>
