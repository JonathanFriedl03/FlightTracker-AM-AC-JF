@model Flight_Tracker.Models.Customer

@{
    ViewData["Title"] = "Index";
}

<br/>

<div class="border backgroundWhite">
    <div class="row">
        @*<div class="col-6"><h1>Hello @Model.C</h1></div>*@
        <div class="col-6">
            <h2 class="text-info">Contact List</h2>
            <a asp-action="Create" asp-controller="Contacts">Add New Contact</a>
        </div>
    </div>
    <br />
    <div>
        <table id="tblData" class="table table-striped border">
            <tr class="table-secondary"> 
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Phone Number
                </th>
                <th></th>
                <th></th>
            </tr>
        <tbody>
        @foreach (var item in Model.Contacts)
         {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td class="whiteSpace" colspan="1" width:5px">
                    <a asp-action="Edit" asp-controller="Contacts" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <a asp-action="Delete" asp-controller="Contacts" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
                <td></td>
            </tr>
         }
        </tbody>
        </table>
    </div>
</div>